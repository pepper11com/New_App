<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.New_App" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:colorPrimary">@color/dark_orange</item>

        <item name="android:statusBarColor" >#000000</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <style name="Theme.New_App.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/bright_orange</item>
    </style>

    <style name="CustomTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/bright_orange</item>
        <item name="clockFaceBackgroundColor">@color/dark_grey</item>

        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorOnSurface">@color/medium_grey</item>
    </style>


</resources>